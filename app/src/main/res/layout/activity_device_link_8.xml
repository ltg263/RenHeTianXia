<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="20dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="5dp"
                        android:layout_below="@id/tv_sb_type"
                        android:layout_alignEnd="@id/tv_sb_type"
                        android:layout_marginTop="-6dp"
                        android:background="@drawable/shape_radius_th" />

                    <TextView
                        android:id="@+id/tv_sb_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="实时数据"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/sp_16"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/tv_sb_type"
                        android:layout_marginTop="25dp">

                        <LinearLayout
                            android:id="@+id/ll_dr_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/btn_shape_theme"
                            android:gravity="center"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/iv_dr_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:src="@mipmap/ic_select_f_yse" />

                            <TextView
                                android:id="@+id/tv_dr_1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CH1电容"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_14" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_dr_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/btn_shape_theme"
                            android:gravity="center"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/iv_dr_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:src="@mipmap/ic_select_f_yse" />

                            <TextView
                                android:id="@+id/tv_dr_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CH2电容"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_14" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/ll_dr_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="15dp"
                            android:background="@drawable/btn_shape_theme"
                            android:gravity="center"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/iv_dr_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="5dp"
                                android:src="@mipmap/ic_select_f_yse" />

                            <TextView
                                android:id="@+id/tv_dr_3"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CH3电容"
                                android:textColor="@color/white"
                                android:textSize="@dimen/sp_14" />

                        </LinearLayout>
                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="35dp"
                    android:background="@drawable/ic_shade_img"
                    android:padding="@dimen/dp_10">

                    <TextView
                        android:id="@+id/tv_ch_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:drawableStart="@mipmap/ic_logo_11"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="CH1电容"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_ch_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:layout_toEndOf="@id/tv_ch_1"
                        android:drawableStart="@mipmap/ic_logo_22"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="CH2电容"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/sp_12" />

                    <TextView
                        android:id="@+id/tv_ch_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/dp_10"
                        android:layout_toEndOf="@id/tv_ch_2"
                        android:drawableStart="@mipmap/ic_logo_33"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="CH3电容"
                        android:textColor="@color/color_000000"
                        android:textSize="@dimen/sp_12" />


                    <com.github.mikephil.charting.charts.LineChart
                        android:id="@+id/line_chart"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_below="@id/tv_ch_3" />


                </RelativeLayout>

            </LinearLayout>

            <include layout="@layout/include_device_link_bnt" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>