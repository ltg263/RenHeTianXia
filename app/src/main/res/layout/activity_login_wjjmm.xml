<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_ffffff"
    android:orientation="vertical">

    <include layout="@layout/include_toolbar" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_icon_img" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_icon"
            android:layout_marginTop="@dimen/dp_10"
            android:text=""
            android:textColor="@color/color_999999" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape_eee_line_5"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_sjh"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:inputType="phone"
            android:drawableStart="@mipmap/ic_head"
            android:textCursorDrawable="@drawable/shape_edit_cursor"
            android:gravity="center"
            android:hint="请输入手机号"
            android:padding="15dp"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@color/color_666666" />

        <TextView
            android:id="@+id/get_code"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="获取验证码"
            android:textColor="@color/red40"
            android:textSize="@dimen/sp_14" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_eee_line_5"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_yzm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableStart="@mipmap/ic_anquan"
            android:textCursorDrawable="@drawable/shape_edit_cursor"
            android:gravity="center"
            android:inputType="number"
            android:hint="请输入验证码"
            android:padding="15dp"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@color/color_666666"
            android:visibility="invisible" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="获取验证码"
            android:textColor="@color/red40"
            android:textSize="@dimen/sp_14"
            android:visibility="invisible" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_eee_line_5"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_mm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:drawableStart="@mipmap/ic_pos"
            android:gravity="center"
            android:textCursorDrawable="@drawable/shape_edit_cursor"
            android:inputType="number"
            android:hint="请输入新密码"
            android:padding="15dp"
            android:textColor="@color/color_666666"
            android:textSize="@dimen/sp_14" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginVertical="12dp"
            android:layout_marginStart="@dimen/dp_10"
            android:background="@color/color_666666"
            android:visibility="invisible" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="获取验证码"
            android:textColor="@color/red40"
            android:textSize="@dimen/sp_14"
            android:visibility="invisible" />

    </LinearLayout>


    <TextView
        android:id="@+id/tv_ok"
        android:layout_width="match_parent"

        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/shape_radius_th"
        android:gravity="center"
        android:text="确  定"
        android:textColor="@color/color_ffffff"
        android:textSize="16dp" />

</LinearLayout>
