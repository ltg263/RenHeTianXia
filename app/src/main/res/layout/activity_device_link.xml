<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/my_toolbar" />

    <androidx.core.widget.NestedScrollView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_bj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:src="@mipmap/jif_beijing" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="-120dp"
                android:background="@drawable/ic_shade_img"
                android:padding="15dp">

                <TextView
                    android:id="@+id/tv_sb_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="25dp"
                    android:text="智能手套"
                    android:textColor="#4A4A4A"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_sort_Name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_sb_name"
                    android:layout_alignStart="@id/tv_sb_name"
                    android:layout_marginTop="15dp"
                    android:text="五路传感器 丨 数据及波形"
                    android:textColor="@color/color_text_theme"
                    android:textSize="@dimen/sp_12" />

                <ImageView
                    android:id="@+id/iv_sb_img"
                    android:layout_width="wrap_content"
                    android:layout_height="100dp"
                    android:layout_alignParentEnd="true"
                    android:layout_margin="@dimen/dp_10"
                    android:adjustViewBounds="true"
                    android:src="@mipmap/ic_icon_img" />

                <TextView
                    android:id="@+id/tv_sb_sm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_sb_img"
                    android:layout_alignStart="@id/tv_sb_name"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="无"
                    android:textColor="@color/color_999999"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_szmr"
                    android:layout_width="95dp"
                    android:layout_height="30dp"
                    android:layout_below="@id/tv_sb_sm"
                    android:layout_alignStart="@id/tv_sb_name"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/shape_radius_th"
                    android:gravity="center"
                    android:text="设为默认"
                    android:textColor="@color/white" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_margin="15dp"
                android:layout_weight="1">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="5dp"
                    android:layout_below="@id/tv_sb_type"
                    android:layout_alignEnd="@id/tv_sb_type"
                    android:layout_marginTop="-6dp"
                    android:background="@drawable/shape_radius_th" />

                <TextView
                    android:id="@+id/tv_sb_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="操作指南"
                    android:textColor="@color/color_000000"
                    android:textSize="@dimen/sp_16"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_sb_type"
                    android:layout_marginTop="20dp"
                    android:text="无"
                    android:textColor="@color/color_999999"
                    android:textSize="12sp" />

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_bnt"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginHorizontal="@dimen/dp_40"
                android:background="@drawable/shape_radius_th"
                android:gravity="center"
                android:text="设备连接"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>